<h1>Editing Book</h1>
<%= form_for(@post) do |f| %>
	<div class="field">
		<label>Title</label>
		<%= f.text_field :title, class: 'book_title' %>
	</div>
	<div class="field">
		<label>Body</label>
		<%= f.text_area :body, class: 'book_body' %>
	</div>
	<div class="field">
		<%= f.submit 'Update Book' %>
	</div>
<% end %>
<%= link_to 'Show', post_path, class: 'show_#{id}' %> |
<%= link_to 'Back', new_post_path, class: 'back' %>