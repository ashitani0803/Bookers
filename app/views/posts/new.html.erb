<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
	</thead>
	<tbody>
		<% @posts.each do |post| %>
            <tr>
			    <td><%= post.title %></td>
			    <td><%= post.body %></td>
			    <td><%= link_to 'Show', post_path(post), class: 'show_#{id}' %></td>
			    <td><%= link_to 'Edit', edit_post_path(post), class: 'edit_#{id}' %></td>
			    <td><%= link_to 'Destroy', post_path(post), class: 'destroy_#{id}', method: :delete, data: { confirm: 'Are you sure?'} %></td>
		    </tr>
		<% end %>
	</tbody>
</table>
<h2>New book</h2>
<%= form_for(@post) do |f| %>
	<label>Title</label>
	<div>
		<%= f.text_field :title, class: 'book_title' %>
	</div>
	<label>Body</label>
	<div>
		<%= f.text_area :body, class: 'book_body' %>
	</div>
	<%= f.submit 'Create Book' %>
<% end %>
